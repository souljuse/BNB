<div class="row">

	<h1 class="h1 text-center">Spaces to rent</h1>

	<ul id="spaces">

		<% @spaces.each do |space| %>
			<li>
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h4><%= space.name %></h4>
					</div>
					<div class="container">
						<div class="row">
							<% if space.images.first %>
								<div class="col-sm-3">
									<img src=<%= "#{space.images.first.url}" %> alt="">
								</div>
							<% end %>
							<div class="col-sm-9">
								<p class="lead"><%= space.description[0..120]+"..." %></p>
								<p>Â£<%= "%.2f" % space.price %></p>
								<p class="space_available_from"><%= space.available_from.strftime("%d/%m/%Y") %> -</p>
								<p class="space_available_to"><%= space.available_to.strftime("%d/%m/%Y") %></p>
								<a href=<%= "/spaces/#{space.id}" %> class="btn">Book Now!</a>
							</div>
						</div>
					</div>
				</div>
			</li>
		<% end %>
	</ul>

</div>
