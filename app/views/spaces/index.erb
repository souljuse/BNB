<div class="row">
	<h1 class="text-center">Spaces to rent</h1>
</div>

<% @spaces.each do |space| %>
	<div class="row">
		<a class='space_panel' href='<%= "/spaces/#{space.id}" %>' >
			<div class="panel panel-default">

				<div class="container" >
					<div class="row">

						<div class="col-sm-2" style="margin-top: 15px;">
							<img src=<%= space.images.first ? "#{space.images.first.url}" : "imgs/no_img.png" %> alt="">
						</div>

						<div class="col-sm-9">
							<h3><%= space.name %></h3>
							<h5><%= space.description[0..120]+"..." %></h5>
							<h3>Â£<%= "%.2f" % space.price %> p.n.</h3>
							<p class="space_available_from"><%= space.available_from.strftime("%d/%m/%Y") %> -</p>
							<p class="space_available_to"><%= space.available_to.strftime("%d/%m/%Y") %></p>
						</div>
					</div>
				</div>

			</div>
		</a>
	</div>
<% end %>
